{
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*",
        "phpunit/phpunit": "^9"
    },
    "scripts": {
        "lint": "./vendor/bin/phpcs --standard=PSR12 classes controllers models",
	"test": "./vendor/bin/phpunit tests"
    },
    "autoload": {
        "psr-4": {
            "APP\\": "classes",
            "APP\\Models\\": "models",
            "APP\\Controllers\\": "controllers"
        }
    },
    "require": {
        "ext-pdo": "*",
      "ext-curl": "*",
      "ext-json": "*"
    }
}
